<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/product_navigation"
    app:startDestination="@id/productListFragment">

    <fragment
        android:id="@+id/productListFragment"
        android:name="cbedoy.stateshopapp.product_list.ProductListFragment"
        android:label="ProductListFragment" >
        <action
            android:id="@+id/action_move_from_list_to_detail"
            app:destination="@id/productDetailFragment" />
        <action
            android:id="@+id/action_move_from_list_to_checkout"
            app:destination="@id/checkoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="cbedoy.stateshopapp.product_detail.ProductDetailFragment"
        android:label="ProductDetailFragment" />
    <fragment
        android:id="@+id/checkoutFragment"
        android:name="cbedoy.stateshopapp.checkout.CheckoutFragment"
        android:label="CheckoutFragment" />
</navigation>